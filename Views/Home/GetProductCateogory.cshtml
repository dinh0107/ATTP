@model ATTP.ViewModel.CategoryProductViewModel
@using PagedList.Mvc
@if (Model.Products.Any())
{
    foreach (var item in Model.Products)
    {
        <div class="col-lg-4 col-md-4 mb-4">
            @Html.Partial("_ItemProduct", item)
        </div>
    }
    if (Model.Products.PageCount > 1)
    {
        <div class="col-lg-12 text-center">
            @Html.PagedListPager(Model.Products, page => Url.Action("ProductCategory", new { page, CatId = Model.CatId }))
        </div>
    }
}
else
{
    <div class="col-lg-12">
        <p class="alert alert-success small">Nội dung hiện chưa được cập nhật. Vui lòng quay lại sau !!!!</p>
    </div>
}



