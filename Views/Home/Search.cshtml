@model ATTP.ViewModel.SearchProductViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Tìm kiếm";
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("Search", "Home");
    ViewBag.Robots = "noindex";
}
<div class="banner-page">
    <div class="banner-page__img">
        <img src="~/Content/images/img-main/banner-san-pham.jpg" alt="sản phẩm">
    </div>
    <div class="info-page">
        <div class="container d-flex h-100 flex-column justify-content-center">
            <div class="info-page__name">
                @Model.Keywords
            </div>
            <div class="info-page_url text-white mt-1">
                <a href="/" class="index-link mr-3">
                    <img src="~/Content/images/img-main/icon-logo.png" alt="giới thiệu">
                </a>
                &gt;
                <a href="" class="name-link ml-3">Từ khóa: @Model.Keywords</a>
            </div>
        </div>
    </div>
</div>
<section class="py-3">
    <div class="container">
        @if (Model.Products.Any())
        {
            <div class="row">
                @foreach (var item in Model.Products)
                {
                    <div class="col-lg-3 col-md-4 mb-4">
                        @Html.Partial("_ItemProduct", item)
                    </div>
                }

            </div>
        }
        else
        {
            <div class="col-lg-8 mt-3">
                <h3 class="font-weight-bold text-danger text-uppercase">Không có kết quả</h3>
                <p>Xin lỗi, không có nội dung phù hợp với cụm từ tìm kiếm của bạn. Vui lòng thử lại với một số từ khóa khác.</p>
            </div>
        }

    </div>
</section>